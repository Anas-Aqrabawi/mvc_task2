@model UserLogin;
@{
    Layout = "~/views/shared/_LoginAndRegisterLayout.cshtml";
}

<!-- Sign In Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                   
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Reciply Blog</h3>
                    <h3>Sign In</h3>
                </div>

                <!---------------------- Form Starter --------------------------->
                <form asp-action="Login" method="POST">
                <div class="form-floating mb-3">
                    <input asp-for="UserName" type="text" class="form-control" id="floatingInput" placeholder="Username" reuqired>
                    <label asp-for="UserName">Username</label>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label asp-for="Password">Password</label>
                </div>
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign In</button>
                <p class="text-center mb-0">Don't have an Account? <a asp-action="Register">Sign Up</a></p>
                <div asp-validation-summary="All" class="text-danger"></div>
                </form>
                <!------------------ Form Ending -------------------->
            </div>
        </div>
    </div>
</div>
<!-- Sign In End -->
